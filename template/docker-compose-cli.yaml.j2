version: '2'

volumes:
  {%- for i in ORDERER_INDICES %}
  orderer{{i}}.{{DOMAIN_NAME}}:
  {%- endfor %}
  {%- for i in ORG_INDICES %}
  {%- for j in PEER_INDICES %}
  peer{{j}}.org{{i}}.{{DOMAIN_NAME}}:
  {%- endfor %}
  {%- endfor %}

networks:
  byfn:

services:
  {%- for i in ORG_INDICES %}
  ca.org{{i}}.{{DOMAIN_NAME}}:
    extends:
      file:   docker-compose-e2e.yaml
      service: ca.org{{i}}.{{DOMAIN_NAME}}
    container_name: ca_peerOrg{{i}}
    networks:
      - byfn
  {%- endfor %}
  {%- for i in ORDERER_INDICES %}

  orderer{{i}}.{{DOMAIN_NAME}}:
    extends:
      file:   docker-compose-e2e.yaml
      service: orderer{{i}}.{{DOMAIN_NAME}}
    container_name: orderer{{i}}.{{DOMAIN_NAME}}
    networks:
      - byfn
  {%- endfor %}
  {%- for i in ORG_INDICES %}
  {%- for j in PEER_INDICES %}

  peer{{j}}.org{{i}}.{{DOMAIN_NAME}}:
    container_name: peer{{j}}.org{{i}}.{{DOMAIN_NAME}}
    extends:
      file:   docker-compose-e2e.yaml
      service: peer{{j}}.org{{i}}.{{DOMAIN_NAME}}
    networks:
      - byfn
  {%- endfor %}
  {%- endfor %}

  cli:
    container_name: cli
    image: $IMAGE_NS/fabric-tools:$IMAGE_TAG
    tty: true
    stdin_open: true
    environment:
      - FABRIC_LOGGING_SPEC
      - GOPATH=/opt/gopath
      - CORE_PEER_ID=cli
      - CORE_PEER_ADDRESS=peer0.org1.{{DOMAIN_NAME}}:7051
      - CORE_PEER_LOCALMSPID=Org1MSP
      - CORE_PEER_TLS_ENABLED=true
      - CORE_PEER_TLS_CERT_FILE=/crypto-config/peerOrganizations/org1.{{DOMAIN_NAME}}/peers/peer0.org1.{{DOMAIN_NAME}}/tls/server.crt
      - CORE_PEER_TLS_KEY_FILE=/crypto-config/peerOrganizations/org1.{{DOMAIN_NAME}}/peers/peer0.org1.{{DOMAIN_NAME}}/tls/server.key
      - CORE_PEER_TLS_ROOTCERT_FILE=/crypto-config/peerOrganizations/org1.{{DOMAIN_NAME}}/peers/peer0.org1.{{DOMAIN_NAME}}/tls/ca.crt
      - CORE_PEER_MSPCONFIGPATH=/crypto-config/peerOrganizations/org1.{{DOMAIN_NAME}}/users/Admin@org1.{{DOMAIN_NAME}}/msp
      - CORE_PEER_TLS_CLIENTAUTHREQUIRED=true
      - CORE_PEER_TLS_CLIENTCERT_FILE=/crypto-config/peerOrganizations/org1.{{DOMAIN_NAME}}/peers/peer0.org1.{{DOMAIN_NAME}}/tls/server.crt
      - CORE_PEER_TLS_CLIENTKEY_FILE=/crypto-config/peerOrganizations/org1.{{DOMAIN_NAME}}/peers/peer0.org1.{{DOMAIN_NAME}}/tls/server.key
    working_dir: /opt/gopath/src/github.com/hyperledger/fabric/peer
    command: /bin/bash
    volumes:
      - ./chaincodes:/chaincodes
      - ./crypto-config:/crypto-config/
      - ./scripts:/scripts
      - ./channel-artifacts:/channel-artifacts
      - ./collections.json:/collections.json
    depends_on:{% for i in ORDERER_INDICES %}
      - orderer{{i}}.{{DOMAIN_NAME}}{% endfor %}{% for i in ORG_INDICES %}{% for j in PEER_INDICES %}
      - peer{{j}}.org{{i}}.{{DOMAIN_NAME}}{% endfor %}{% endfor %}
    networks:
      - byfn
